<div class="node-content {{ classes }}">
    <div class="node-heading">
        <span class="icon {{type}}"></span>
        <span class="time">{{ time }}</span>

        <div class="node-info"> 
            <h2>{{name}}</h2>
            <span class="title">
                {{#if slot}} [slot {{ slot }}]{{/if}}
                {{#if is_collectable}}<i class="fa fa-cube"></i>{{/if}}
                {{#if is_ephemeral}}<i class="fa fa-star"></i>{{/if}}
            </span>
            {{#if isActive}}
                <span class="time-remaining">[
                    {{ earth_time_remaining.minutes }}m {{ earth_time_remaining.seconds }}s
                ]</span>
            {{/if}}
        </div>
    </div>
    <div class="node-body">
        {{#if location }}
            <div class="location">{{ location }}, {{ pos }}</div>
        {{/if}}
    </div>
    <div class="form-actions align-right">
        <a class="btn btn-default btn-close" data-dismiss="modal">Close</a>
    </div>
</div>